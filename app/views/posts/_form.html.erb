<div class="row justify-content-center">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <%= form_for @post do |f| %>
          <%= render "shared/error", resource: @post %>

          <div class="form-group col-sm-12">
            <%= f.label :title, "Title" %>
            <%= f.text_field :title, class: "form-control", autofocus: true, required: true, placeholder: "Post Title", maxlength: 255 %>
          </div>

          <div class="form-group col-sm-12">
            <%= f.label :body, "Body" %>
            <%= f.text_area :body, class: "form-control", required: true, placeholder: "Post Body", maxlength: 255 %>
          </div>

          <div class="form-group col-sm-12">
            <%= f.submit "Create", class: "btn btn-primary", data: { disable_with: "Creating..." } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

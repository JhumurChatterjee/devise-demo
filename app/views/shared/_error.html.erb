<% if resource.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error error-heading">
      This form contains <%= pluralize(resource.errors.count, "error") %>.
    </div>

    <ul class="error-list">
      <% resource.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
